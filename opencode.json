{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        },
        "shopify-dev-mcp": {
            "type": "local",
            "enabled": true,
            "command": [
                "bunx",
                "-y",
                "@shopify/dev-mcp@latest"
            ],
        }
    }
}
